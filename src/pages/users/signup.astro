---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { signIn } from '../../auth';
import { getSession } from 'auth-astro/server';

// Get current session
const session = await getSession(Astro.request);

// If already logged in, redirect to homepage
if (session) {
  return Astro.redirect('/');
}
---

<Layout title="Sign Up - Stack Overflow">
  <Header />

  <main class="flex-1 flex items-center justify-center py-16 px-4">
    <div class="w-full max-w-[350px] flex flex-col items-center">
      <div class="mb-8 text-center">
        <h1 class="text-xl font-normal mb-2">Join the Stack Overflow community</h1>
        <p class="text-sm text-[#6a737c]">Get unstuck â€” ask a question</p>
      </div>

      <div class="w-full mb-6">
        <div class="flex items-start mb-6">
          <div class="mr-2 mt-1">
            <svg aria-hidden="true" width="26" height="26" viewBox="0 0 26 26" class="text-[#0a95ff]">
              <path d="M12 .7a2 2 0 0 1 3 0l8.5 9.6a1 1 0 0 1-.7 1.7H4.2a1 1 0 0 1-.7-1.7L12 .7z" fill="currentColor"/>
              <path d="M20.6 16H6.4l7.1 8 7-8h.1z" fill="currentColor" opacity=".2"/>
            </svg>
          </div>
          <div>
            <h2 class="text-[15px] font-normal">Get answers to your questions</h2>
            <p class="text-[13px] text-[#6a737c]">Create an account to get personalized answers to your questions</p>
          </div>
        </div>

        <div class="flex items-start mb-6">
          <div class="mr-2 mt-1">
            <svg aria-hidden="true" width="26" height="26" viewBox="0 0 26 26" class="text-[#0a95ff]">
              <path d="M12 .7a2 2 0 0 1 3 0l8.5 9.6a1 1 0 0 1-.7 1.7H4.2a1 1 0 0 1-.7-1.7L12 .7z" fill="currentColor"/>
              <path d="M20.6 16H6.4l7.1 8 7-8h.1z" fill="currentColor" opacity=".2"/>
            </svg>
          </div>
          <div>
            <h2 class="text-[15px] font-normal">Earn reputation</h2>
            <p class="text-[13px] text-[#6a737c]">Get recognized for your contributions and expertise</p>
          </div>
        </div>

        <div class="flex items-start">
          <div class="mr-2 mt-1">
            <svg aria-hidden="true" width="26" height="26" viewBox="0 0 26 26" class="text-[#0a95ff]">
              <path d="M12 .7a2 2 0 0 1 3 0l8.5 9.6a1 1 0 0 1-.7 1.7H4.2a1 1 0 0 1-.7-1.7L12 .7z" fill="currentColor"/>
              <path d="M20.6 16H6.4l7.1 8 7-8h.1z" fill="currentColor" opacity=".2"/>
            </svg>
          </div>
          <div>
            <h2 class="text-[15px] font-normal">Save your favorite content</h2>
            <p class="text-[13px] text-[#6a737c]">Build a personal library of solutions to refer back to</p>
          </div>
        </div>
      </div>

      <div class="w-full space-y-3">
        <a href={`${signIn()}?provider=github`} class="flex items-center justify-center w-full py-2 px-4 gap-2 bg-[#2f3337] text-white rounded border border-[#6a737c] hover:bg-[#242729]">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>Sign up with GitHub</span>
        </a>

        <div class="text-center">
          <div class="text-sm text-[#6a737c] my-4 flex items-center gap-2 before:content-[''] before:flex-1 before:border-t before:border-[#e3e6e8] after:content-[''] after:flex-1 after:border-t after:border-[#e3e6e8]">
            <span>or</span>
          </div>

          <!-- Email/Password signup form (simulated - just for show in this demo) -->
          <div class="w-full space-y-4">
            <div class="text-left">
              <label for="display-name" class="block text-[13px] font-bold text-[#0c0d0e] mb-1">Display name</label>
              <input
                id="display-name"
                type="text"
                placeholder="Display name"
                class="w-full py-2 px-3 border border-[#babfc4] rounded focus:border-[#6bbbf7] focus:outline-none focus:shadow-[0_0_0_4px_rgba(0,116,204,0.15)]"
              />
            </div>
            <div class="text-left">
              <label for="email" class="block text-[13px] font-bold text-[#0c0d0e] mb-1">Email</label>
              <input
                id="email"
                type="email"
                placeholder="Email"
                class="w-full py-2 px-3 border border-[#babfc4] rounded focus:border-[#6bbbf7] focus:outline-none focus:shadow-[0_0_0_4px_rgba(0,116,204,0.15)]"
              />
            </div>
            <div class="text-left">
              <label for="password" class="block text-[13px] font-bold text-[#0c0d0e] mb-1">Password</label>
              <input
                id="password"
                type="password"
                placeholder="Password"
                class="w-full py-2 px-3 border border-[#babfc4] rounded focus:border-[#6bbbf7] focus:outline-none focus:shadow-[0_0_0_4px_rgba(0,116,204,0.15)]"
              />
              <p class="text-[12px] text-[#6a737c] mt-1">
                Passwords must contain at least eight characters, including at least 1 letter and 1 number.
              </p>
            </div>
            <button type="button" class="w-full py-2 btn-primary">Sign up</button>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center text-[13px]">
        <p class="text-[#6a737c]">
          Already have an account? <a href="/users/login" class="text-[#0074cc]">Log in</a>
        </p>
        <p class="text-[#6a737c] mt-4">
          Are you an employer? <a href="#" class="text-[#0074cc]">Sign up on Talent</a>
        </p>
        <p class="text-[12px] text-[#6a737c] mt-8 max-w-[300px]">
          By clicking "Sign up", you agree to our
          <a href="#" class="text-[#0074cc]">terms of service</a>,
          <a href="#" class="text-[#0074cc]">privacy policy</a> and
          <a href="#" class="text-[#0074cc]">cookie policy</a>
        </p>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
